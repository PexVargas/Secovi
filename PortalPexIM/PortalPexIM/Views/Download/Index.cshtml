@model List<PortalPexIM.ViewModel.FiltroEstados>

<style>
    .radio {
        padding: 35px;
    }
</style>


<div class="row ">


    <div class="col-md-6 quadro">
        <h3 id="p1">Download</h3>
        <br />
    </div>
    <div class="col-md-3 c">
        <div class="togglebutton radio">
            <label>
                <span style="font-weight:bold"></span>Venda
                <input type="checkbox" id="cmbAbsoluto">
                <span class="toggle"></span>Locação
            </label>
        </div>
        <br />
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <form id="RegisterValidation" action="" method="" novalidate="novalidate">
            <div class="card ">
                <div class="card-header card-header-info card-header-icon">
                    <div class="card-icon">
                        <i class="material-icons">mail_outline</i>
                    </div>
                    <h4 class="card-title">Register Form</h4>
                </div>
                <div class="card-body ">
                    <div class="form-group bmd-form-group">

                        <div class="form-group">
                            <label for="exampleFormControlSelect2">Indicador Nacional</label>
                            <select multiple class="form-control selectpicker" data-style="btn btn-link" title="" id="">

                                @foreach (var item in Model)
                                {
                                    <option value="@item.CodEstado">@item.NomeEstado</option>
                                }


                            </select>
                        </div>

                    </div>
                    <div class="form-group bmd-form-group">
                        <div class="form-group">
                            <label for="exampleFormControlSelect2">Tipo de dado</label>
                            <select multiple class="form-control selectpicker" data-style="btn btn-link" title="" id="">

                                <option value="">Todos</option>
                                <option value="1">Venda</option>
                                <option value="2">Locação</option>


                            </select>
                        </div>
                    </div>
                    <div class="form-group bmd-form-group">
                        <div class="form-group">
                            <div class="form-group">
                                <label class="label-control">Mês/Ano</label>
                                <input type="text" class="form-control datetimepicker" value="21/06/2018" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-right">
                    <button type="submit" class="btn btn-danger " style=" margin-left: 275px;">Cancelar</button>
                    <button type="submit" class="btn btn-success">Baixar</button>
                </div>
            </div>
        </form>
    </div>
</div>

<script>
    $('.datetimepicker').datetimepicker({
        icons: {
            time: "fa fa-clock-o",
            date: "fa fa-calendar",
            up: "fa fa-chevron-up",
            down: "fa fa-chevron-down",
            previous: 'fa fa-chevron-left',
            next: 'fa fa-chevron-right',
            today: 'fa fa-screenshot',
            clear: 'fa fa-trash',
            close: 'fa fa-remove'
        }
    });
</script>








<script>

    $(document).ready(function () {
        Pesquisar();
    });


    function Pesquisar()
    {
        var processed_json = new Array();

        var processed_json = new Array();
        $.ajax({
            type: "POST",
            contentType: "application/json; charset=utf-8",
            url: "/Home/Evolutivo",
            //data: JSON.stringify({ Ano: Ano, Regiao: Regiao, Estado: Estado, Empresa: Player, Planta: Planta, Indicador: $this.val(), Dimensao: dimensao }),
            dataType: "json",
            success: function (dadosGrafico) {
                criarGrafico(dadosGrafico);
                
            },
            error: function (err) {
            }
        });


    }

    function criarGrafico(dadosGrafico) {
        var dadosProcessados = [];
     
        $.each(dadosGrafico, function (i, obj) {
            
            var agregador = { name: obj.tipo, data: [] }
            agregador.data.push(obj.valor);

            var resultObject = search(obj.tipo, dadosProcessados);

            if (!resultObject) {
                dadosProcessados.push(agregador)
            }
            else {
                resultObject.data.push(obj.valor)
            }

        })

        Highcharts.chart('graficoEvolutivo', {
            chart: {
                type: 'column'
            },
            title: {
                text: 'Evolutivo de ofertas'
            },
            subtitle: {
                text: ' '
            },
            xAxis: {
                categories: [

                    'Mar',

                ],
                crosshair: true
            },
           
            series: dadosProcessados,
        
        });
    }

    function search(nameKey, myArray) {
        for (var i = 0; i < myArray.length; i++) {
            if (myArray[i].name === nameKey) {
                return myArray[i];
            }
        }
    }
</script>

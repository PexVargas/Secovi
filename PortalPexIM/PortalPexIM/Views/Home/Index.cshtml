<div class="row">
    <div class="col-md-12">
        <div class="card ">
            <div class="card-header card-header-info card-header-icon">
            </div>
            <div class="card-body ">
                <div class="row">
                    <div class="col-md-3 b">
                        <div class="form-group">
                            <label for="exampleFormControlSelect2">Selecione a Cidade...</label>
                            <select multiple class="form-control selectpicker" data-style="btn btn-link" title="" id="cmbCidade">
                                @foreach (var item in Model.Cidades)
                                {
                                    <option value="@item">@item</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="exampleFormControlSelect2">Selecione o Bairro...</label>
                            <select multiple class="form-control selectpicker" data-style="btn btn-link" title="" id="cmbBairro">
                                @foreach (var item in Model.Bairro)
                                {
                                    <option value="@item">@item</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="exampleFormControlSelect2">Selecione o Tipo...</label>
                            <select multiple class="form-control selectpicker" data-style="btn btn-link" title="" id="cmbTipo">
                                @foreach (var item in Model.Tipo)
                                {
                                    <option value="@item">@item</option>
                                }
                            </select>
                        </div>
                    </div>


                    <div class="col-md-3">
                        <button type="button" onclick='limpar()' class="btn btn-light f" style="margin-top: 30px;">Limpar</button>
                        <button type="button" onclick='pesquisar()' class="btn btn-success" style="margin-top: 30px;">Pesquisar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

